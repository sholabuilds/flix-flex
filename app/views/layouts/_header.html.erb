<header>
    <nav>
        <%= link_to image_tag("logo.png"), root_path %>
        <ul class="left">
            <li>
                <%= nav_link_to "Released Movies", movies_path %>
            </li>
            <li>
                <%= nav_link_to "Recent", filtered_movies_path(:recent_releases) %>
            </li>
            <li>
                <%= nav_link_to "Upcoming", filtered_movies_path(:upcoming_releases) %>
            </li>
            <li>
                <%= nav_link_to "Hits", filtered_movies_path(:hits) %>
            </li>
            <li>
                <%= nav_link_to "Flops", filtered_movies_path(:flops) %>
            </li>
        </ul>
        <ul class="right">
            <% if current_user %>
                <li>
                    <%= link_to profile_image(current_user), current_user %>
                </li>
                <li>
                    <%= link_to "Account Settings", edit_user_path(current_user) %>
                </li>
                <li>
                    <%= link_to "Sign Out", signout_path, class: "button", data: {turbo_method: :delete, turbo_confirm: "Are you sure want to sign out?"} %>
                </li>
            <% else %>
                <li>
                    <%= link_to "Sign in", signin_path, class: "button" %>
                </li>
                <li>
                    <%= link_to "Sign up", signup_path, class: "button" %>
                </li>
            <% end %>
        </ul>
    </nav>
</header>