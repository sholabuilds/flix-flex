<h1>Write review for <%= link_to @movie.title, @movie %></h1>

<%= form_with model: [@movie, @review] do |f| %>
    <%= render "shared/errors", object: @review %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :stars %>
    <%= f.select :stars, Review::STARS %>

    <%= f.label :comment %>
    <%= f.text_area :comment, rows: 7 %>

    <%= f.submit "Post Review" %>
<% end %>