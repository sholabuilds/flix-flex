<h1>Create a New Movie</h1>

<%= form_with model: @movie do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :description %>
    <%= f.text_area :description, rows: 7 %>

    <%= f.label :rating %>
    <%= f.text_field :rating %>

    <%= f.label :release_date %>
    <%= f.date_field :release_date %>

    <%= f.label :total_gross %>
    <%= f.number_field :total_gross %>

    <%= f.submit %>
<% end %>