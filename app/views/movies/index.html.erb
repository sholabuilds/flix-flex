<h1>Movies</h1>

<ul>
    <% @movies.each do |movie| %>
        <li>
            <strong><%= movie.title %></strong> (<%= movie.rating %>): <%= total_gross(movie) %>
            <p><%= truncate(movie.description, length: 30, separator: " ") %></p>
            <p><%= year_of(movie) %></p>
        </li>
    <% end %>
</ul>
